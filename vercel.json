{
  "version": 2,
  "routes": [
    { "src": "/api/chat",    "dest": "/api/chat.mjs" },
    { "src": "/api/package", "dest": "/api/package.mjs" },
    { "src": "/api/pdf",     "dest": "/api/pdf.mjs" },
    { "src": "/api/email",   "dest": "/api/email.mjs" },

    { "src": "^/$",          "dest": "/public/index.html" },
    { "src": "/(.*)",        "dest": "/public/$1" }
  ]
}
